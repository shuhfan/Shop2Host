<div class="wrapper">
    <%- include('../partials/adminMenu') %>
    
    <div class="main" style="height: 100vh;">
        <%- include('../partials/adminNav') %>

        <main class="content p-0" style="overflow-x: hidden;">
            <div class="container-fluid p-0">
                <div class="card flex-fill mb-0">
                    <div class="card-header">
                        <h5 class="card-title mb-0">All Tickets</h5>
                    </div>
                </div>
                <div class="col-12 col-lg-12 col-xxl-12 d-flex">
                    <div class="card flex-fill w-100 ">
                        <table class="table table-hover my-0">
                            <thead>
                                <tr>
                                    <th>Ticket</th>
                                    <th>Subject</th>
                                    <th>Status</th>
                                    <th>Priority</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (tickets && tickets.length > 0) { %>
                                    <% tickets.forEach(ticket => { %>
                                        <tr>
                                            <td>#<%= ticket.id %></td>
                                            <td><%= ticket.subject %></td>
                                            <td><span class="<%= ticket.status === 'Answered' ? 'badge bg-success' : 'badge bg-warning' %>"><%= ticket.status %></span></td>
                                            <td><%= ticket.priority %></td>
                                            <td><%= ticket.created_at.toISOString().slice(0, 19).replace('T', ' ') %></td>
                                            <td>
                                                <!-- Link to open the ticket details page -->
                                                <a href="/admin/ticket/<%= ticket.id %>" class="btn btn-info">View</a> <!-- Redirects to the detailed view -->
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr><td colspan="6" class="text-center">No tickets found.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/dashboardFooter') %> 
    </div> 
</div> 