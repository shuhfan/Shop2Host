<div class="wrapper">
    <%- include('../partials/dashboardMenu') %>

    <div class="main" style="height: 100vh;">
        <main class="content p-0" style=" overflow-x: hidden;">
            <%- include('../partials/dashboardNav') %>
            <div class="container-fluid p-0">
                <div class="row align-items-center justify-content-center" style="height: 80vh;">
                    <div class="row justify-content-center align-self-center">
                        <h2 class="d-flex justify-content-center text-muted">Add Business Email</h2>
                        <div class="col-8">
                            <!-- Form for entering business email -->
                            <form action="/save-business-email" method="POST">
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control" name="subdomain" placeholder="subdomain" autocomplete="off" required>
                                    <span class="input-group-text">
                                        <% if (selectedDomain) { %>
                                            @<%= selectedDomain %>
                                        <% } else { %>
                                            @shop2host.com
                                        <% } %>
                                    </span>
                                </div>
                                <button type="submit" class="btn btn-success">Save Email</button>
                            </form>
                        </div>
                        
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <a href="/find-domain" type="submit" id="anim-btn" class="anim-buton-sty">
                                <p class="anim-btn-text" style="padding: 5%;font-weight: 600;">Back</p>
                                <div class="checkbox">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                        viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="5"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="feather feather-arrow-left align-middle fw-bold">
                                        <line x1="19" y1="12" x2="5" y2="12"></line>
                                        <polyline points="12 19 5 12 12 5"></polyline>
                                    </svg>
                                </div>
                            </a>
                        </div>

                    </div>

                </div>
            </div>
            <%- include('../partials/dashboardFooter') %>
        </main>
    </div>
</div>

<script src="/js/app.js"></script>