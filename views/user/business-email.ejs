<div class="wrapper">
    <%- include('../partials/dashboardMenu') %>

    <div class="main" style="height: 100vh;">
        <main class="content p-0" style="overflow: scroll; overflow-x: hidden;">
            <%- include('../partials/dashboardNav') %>
            <div class="container-fluid p-0">
                <div class="row align-items-center justify-content-center" style="height: 80vh;">
                    <div class="row justify-content-center align-self-center">
                        <h2 class="d-flex justify-content-center text-muted">Add Business Email</h2>
                        <div class="col-8">
                            <!-- Form for entering business email -->
                            <form action="/save-business-email" method="POST">
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control" name="subdomain" placeholder="subdomain" autocomplete="off" required>
                                    <span class="input-group-text">
                                        <% if (selectedDomain) { %>
                                            <%= selectedDomain %>
                                        <% } else { %>
                                            @shop2host.com
                                        <% } %>
                                    </span>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Email</button>
                            </form>
                        </div>
                        
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <a class="btn btn-primary" href="/find-domain">Back</a>
                        </div>

                    </div>

                </div>
            </div>
            <%- include('../partials/dashboardFooter') %>
        </main>
    </div>
</div>

<script src="/js/app.js"></script>