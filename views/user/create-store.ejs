<div class="wrapper">
    <%- include('../partials/dashboardMenu') %>

    <div class="main" style="height: 100vh;">
        <%- include('../partials/dashboardNav') %>

        <main class="content p-0" style=" overflow-x: hidden;">
            <div class="container-fluid p-0">
                <div class="row align-items-center justify-content-center" style="height: 80vh;">
                    <div class="col-lg-5 col-md-5 col-sm-12 col-12 bg-white sh flex-column d-flex justify-content-center align-items-center">
                        <h4 class="p-3 mt-2 fw-semibold">Tell us about your business</h4>

                        <form action="/create-store" method="POST">
                            <!-- Product Type Selection -->
                            <div class="p-3 w-100">
                                <label class="form-label fw-semibold">What are you planning to sell on the website?</label>
                                <select name="productType" class="form-select" required>
                                    <option value="">--Select--</option>
                                    <option value="Digital Products">Digital Products</option>
                                    <option value="Dresses">Dresses</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <!-- Experience Selection -->
                            <div class="p-3 w-100">
                                <label class="form-label fw-semibold">Do you have any experience?</label>
                                <select name="experience" class="form-select" required>
                                    <option value="">--Select--</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>

                            <!-- Product Count Selection -->
                            <div class="p-3 w-100">
                                <label class="form-label fw-semibold">Total count of the products you sell?</label>
                                <select name="productCount" class="form-select" required>
                                    <option value="">--Select--</option>
                                    <option value="1-10">1-10</option>
                                    <option value="10-100">10-100</option>
                                    <option value="100 above">100 above</option>
                                </select>
                            </div>

                            <!-- Action Buttons -->
                            <div class="col-12 m-2 d-flex justify-content-end gap-2">
                                <a class="btn btn-primary" href="/dashboard">Cancel</a>
                                <button type="submit" class="btn btn-primary">Next</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/dashboardFooter') %>
    </div>
</div>

<script src="/js/app.js"></script>