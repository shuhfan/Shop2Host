<%-include('../partials/userHeader')%>

<div class="contact1-section-area sp6" id="contact">
  <div class="container">
  
    <div class="row">
      
  
      <div class="col-lg-7 aos-init aos-animate" data-aos="zoom-out" data-aos-duration="1000">
        <div class="contact-info-area" style="height: 100%;">
          
          <img src="assets/img/bg/log.png" alt="">
         
        </div>
      </div>
      <div class="col-lg-5 aos-init aos-animate card shadow-lg border-0 d-flex justify-content-center" data-aos="zoom-out" data-aos-duration="1200">
          <div class="contact-boxarea m-1">
            <h3 class="text-center">Signup</h3>
            <p class="text-center pb-3 fw-semibold text-secondary" >Create New Account Here</p>
            <form action="/signup" method="POST">
              <div class="row">
                <div class="col-lg-12">
                  <div class="input-area">
                      <label class="fw-semibold">Name</label >
                    <input type="text" id="firstName" class="p-2 ms-0 m-2" name="name" placeholder="Name" required="">
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="input-area">
                      <label class="fw-semibold">Phone</label >
                    <input type="number" id="phone" class="p-2 ms-0 m-2" name="phone" placeholder="Phone" required="">
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="input-area">
                      <label class="fw-semibold">Email</label >
                    <input type="email" id="email" class="p-2 ms-0 m-2" name="email" placeholder="Email" required="">
                  </div>
                </div>
                
                <div class="col-lg-12">
                  <div class="input-area">
                      <label class="fw-semibold">Password</label >
                    <input type="password" id="password" class="p-2 ms-0 m-2" name="password" placeholder="Password" required="">
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="input-area">
                      <label class="fw-semibold">Confirm Password</label >
                    <input type="password" id="confirmpassword" class="p-2 ms-0 m-2" name="confirmPassword" placeholder="Confirm Password" required="">
                  </div>
                </div>
                <div class="col-lg-12 mt-2">
                  <div class="input-area">
                    <button type="submit" class="btn btn-primary w-100 rounded-3">Sign up</button>
                  </div>
                </div>
                <div class="col-lg-12 p-2 text-center">
                   Already have account? <a class="text-primary fw-bold" href="/login" tabindex="-1">Sign in</a>
                </div>
              </div>
            </form>
          </div>
        </div>
    </div>
  </div>
</div>
  <script>
    document.querySelector('form').addEventListener('submit', function(event) {
      const password = document.querySelector('input[name="password"]').value;
      const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;
      
      if (password !== confirmPassword) {
        event.preventDefault();
        alert('Passwords do not match!');
      }
    });
  </script>

  
  