<div class="wrapper">
    <%- include('../partials/dashboardMenu') %>

    <div class="main" style="height: 100vh;">
        <%- include('../partials/dashboardNav') %>

        <main class="content p-0" style="overflow: scroll;  overflow-x: hidden;">
            <div class="container-fluid p-0">
               
                    <div class="row">
                        <div class="col-12 col-lg-12 col-xxl-12 d-flex">
                            <div class="card flex-fill w-100 ">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Dashboard</h5>
                                </div>
                                <table class="table table-hover my-0">
                                    <thead>
                                        <tr>
                                            <th>Product/Service</th>
                                            <th>Status</th>
                                            <th class="sty-col">Renewal cost</th>
                                            <th class="sty-col">Billing Cycle</th>
                                            <th class="sty-col">Create Date</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% stores.forEach(store => { %>
                                            <tr>
                                                <td><%= store.name %></td>
                                                <td><span class="badge bg-lt-green text-success">Active</span></td>
                                                <td><%= store.renewal_cost %> INR</td> 
                                                <td><%= store.billing_cycle %></td>
                                                <td>
                                                    <%= new Date(store.created_at).toLocaleDateString('en-US', {
                                                        year: 'numeric',
                                                        month: 'long',
                                                        day: 'numeric'
                                                    }) %>
                                                </td> 
                                                <td><a href="/store/<%= store.id %>" class="btn btn-primary">View</a></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                
            </div>
        </main>

        <%- include('../partials/dashboardFooter') %>
    </div>
</div>
